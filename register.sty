% \RequireIf[#1]{#2}
% Introduce a new \if... macro (if it isn't defined yet).
% #1 (optional): true|false; 
% #2: Name 
% Example:
% \RequireIf[true]{@color}
% introduces \if@color (id it doesn't exist) and sets \@colortrue
% 
\def\RequireIf{%
  \@ifnextchar[%]
    {\@RequireIf}
    {\@RequireIf[true]}%
}

\def\@RequireIf[#1]#2{%
  \expandafter\ifx\csname if#2\endcsname\relax
    \expandafter\newif\csname if#2\endcsname
    \csname #2#1\endcsname
  \else
    \def\@tempa{#1}%
    \ifx\empty\@tempa\relax\relax
    \else
      \csname #2#1\endcsname
    \fi
  \fi
}

